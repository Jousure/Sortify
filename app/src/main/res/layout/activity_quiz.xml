<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp"
    android:background="@drawable/quiz_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Quiz Level"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:paddingBottom="40dp"
        android:gravity="center"
        android:elevation="6dp" />

    <Button
        android:id="@+id/btn_basic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Basic Level Quiz"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/deep_teal"
        android:paddingVertical="14dp"
        android:layout_marginBottom="20dp"
        android:elevation="4dp" />

    <Button
        android:id="@+id/btn_intermediate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Intermediate Level Quiz"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/soft_teal"
        android:paddingVertical="14dp"
        android:layout_marginBottom="20dp"
        android:elevation="4dp" />

    <Button
        android:id="@+id/btn_advanced"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Advanced Level Quiz"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/soft_pink"
        android:paddingVertical="14dp"
        android:elevation="4dp" />

</LinearLayout>