<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/background_image"
    android:padding="20dp">

    <!-- App Logo -->
    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="68dp"
        app:cardCornerRadius="500dp"
        app:cardElevation="5dp"
        android:layout_marginBottom="20dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/appLogo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/logo"
            android:scaleType="fitCenter"/>
        </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="10dp"
        android:layout_marginBottom="24dp"
        android:alpha="0.9"
        app:cardBackgroundColor="@color/soft_pink"
        android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/homeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:shadowColor="@color/black"
            android:shadowRadius="8"
            android:text="Sorting Algorithm Visualizer"
            android:textAlignment="center"
            android:textColor="@color/deep_teal"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/homeDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:text="Learn about different sorting algorithms."
            android:textAlignment="center"
            android:textColor="@color/deep_teal"
            android:textSize="20sp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Usage Guide"
        android:backgroundTint="#007074"
        android:textStyle="bold"
        android:textSize="20sp"
        android:padding="15dp"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/btnVizualization"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Sorting Vizualization"
        android:backgroundTint="@color/deep_teal"
        android:textStyle="bold"
        android:textSize="20sp"
        android:padding="15dp"
        android:textColor="@android:color/white"/>

    <Button
    android:id="@+id/btnSorting"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="View Sorting Algorithms"
    android:backgroundTint="@color/deep_teal"
    android:textStyle="bold"
    android:textSize="20sp"
    android:padding="15dp"
    android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/btnQuiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test Your Knowledge"
        android:backgroundTint="@color/deep_teal"
        android:textStyle="bold"
        android:textSize="20sp"
        android:padding="15dp"
        android:textColor="@android:color/white"/>

</LinearLayout>







